{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": [
      "ESNext"
    ],
    "outDir": "./dist",
    "types": [
      "@cloudflare/workers-types/2023-07-01"
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },

  "include": ["src/*", "scripts/*","src/**/*.ts", "src/**/*.ns.ts", "src/**/*.route.ts", "src/**/*.cr.ts"],
  "exclude": ["node_modules"],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}